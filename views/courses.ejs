<div class="container">
    <div class="col-sm-6">
        <img src="images/food.jpg">
    </div>
    <div class="col-sm-6">
        <h1>
            Courses offered:
        </h1>
        <% offeredCourses.forEach(course => { %>
            <h5>
                <%= course.title %>
            </h5>
            <span>
                <%= course.cost %>
            </span>
        <% }); %>
    </div>
</div>